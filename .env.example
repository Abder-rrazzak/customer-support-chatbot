# Configuration d'environnement pour le Customer Support Chatbot
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# === CONFIGURATION GÉNÉRALE ===
APP_NAME=Customer Support Chatbot
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# === BASE DE DONNÉES ===
# PostgreSQL pour le stockage des conversations
DATABASE_URL=postgresql://chatbot_user:chatbot_pass@localhost:5432/chatbot_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# === CACHE ET SESSIONS ===
# Redis pour les sessions et le cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
SESSION_EXPIRE_HOURS=24

# === SÉCURITÉ ===
# Clé secrète pour JWT et chiffrement
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS (Cross-Origin Resource Sharing)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# === API CONFIGURATION ===
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === INTELLIGENCE ARTIFICIELLE ===
# Modèles NLP
EMBEDDING_MODEL=all-MiniLM-L6-v2
SPACY_MODEL=fr_core_news_sm
INTENT_CONFIDENCE_THRESHOLD=0.7

# APIs externes (optionnel)
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# === MONITORING ET OBSERVABILITÉ ===
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# Logging
LOG_FORMAT=json
LOG_FILE=logs/chatbot.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Sentry pour le monitoring d'erreurs (optionnel)
SENTRY_DSN=your-sentry-dsn-here

# === INTÉGRATIONS EXTERNES ===
# Email (pour les notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Webhook pour intégrations externes
WEBHOOK_URL=https://your-webhook-endpoint.com/chatbot
WEBHOOK_SECRET=your-webhook-secret

# === STOCKAGE DE FICHIERS ===
# Stockage local ou cloud
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 (si STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=chatbot-files

# === DÉVELOPPEMENT ===
# Base de données de test
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_chatbot_db

# Données de démonstration
LOAD_SAMPLE_DATA=true
SAMPLE_CONVERSATIONS=100

# === PRODUCTION ===
# Configuration pour l'environnement de production
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_TIMEOUT=120

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# === ANALYTICS ===
# Configuration pour les analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=1000

# Google Analytics (optionnel)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# === BACKUP ===
# Configuration de sauvegarde
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Tous les jours à 2h du matin
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=chatbot-backups